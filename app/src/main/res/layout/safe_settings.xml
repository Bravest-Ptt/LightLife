<?xml version="1.0" encoding="utf-8"?>
<ts.af2.lightlife.view.SildingFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lightlife="http://schemas.android.com/apk/res/ts.af2.lightlife"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/silding_settings_safe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/settings_safe_linearlayout"
        style="@style/form_main_bg">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_symbol"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/settings_safe_relativelayout"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/list_selector">


                    <TextView
                        android:id="@+id/tv_safe"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="@string/safe_tele_number"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/font_normal" />

                    <ImageView
                        android:id="@+id/iv_tele"
                        style="@style/arrow_right_gray"
                        android:layout_marginRight="16dp" />

                    <TextView
                        android:id="@+id/tele_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/iv_tele"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/font_normal" />


                </RelativeLayout>


            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</ts.af2.lightlife.view.SildingFinishLayout>