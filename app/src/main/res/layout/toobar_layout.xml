<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <Button
        android:layout_centerVertical="true"
        android:id="@+id/toolbar_confirm"
        android:layout_width="@dimen/toolbar_confirm_width"
        android:layout_height="@dimen/toolbar_confirm_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_dp_8"
        android:background="@drawable/profile_confirm_selector"
        android:text="@string/confirm"
        android:textColor="@color/white" />

</RelativeLayout>