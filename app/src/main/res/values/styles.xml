<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="form_main_bg">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/gray_title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="line_horizontal">
        <item name="android:background">@drawable/line_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.30000007dp</item>
    </style>

    <style name="line_horizontal_wide">
        <item name="android:background">@drawable/line_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="arrow_right">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:src">@mipmap/arrow_right_gray</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="arrow_right_dark" parent="@style/arrow_right">
        <item name="android:src">@mipmap/arrow_right_dark</item>
    </style>

    <style name="order_and_trade_status_container">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/list_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="order_and_trade_status_text">
        <item name="android:textSize">@dimen/font_smallest</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="line_vertical">
        <item name="android:background">@drawable/line_vertical</item>
        <item name="android:layout_width">0.30000007dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="order_and_trade_status_icon">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="arrow_right_gray" parent="@style/arrow_right">
        <item name="android:src">@mipmap/arrow_right_gray</item>
    </style>

    <style name="normal_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <!-- Custom progress dialog -->
    <style name="NoBorderProgressDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <item name="android:textColor">#FFFFFF</item>
        <item name="colorAccent">@color/login_pressed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="article_comment_button">
    <item name="android:layout_width">30dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/font_smallest</item>
    <item name="android:background">@null</item>
    <item name="android:textAllCaps">false</item>
    </style>

</resources>
