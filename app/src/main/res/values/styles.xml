<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="form_main_bg">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/gray_title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="line_horizontal">
        <item name="android:background">@drawable/line_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.30000007dp</item>
    </style>

    <style name="line_horizontal_wide">
        <item name="android:background">@drawable/line_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="arrow_right">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:src">@mipmap/arrow_right_gray</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="arrow_right_dark" parent="@style/arrow_right">
    <item name="android:src">@mipmap/arrow_right_dark</item>
    </style>

    <style name="order_and_trade_status_container">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/list_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="order_and_trade_status_text">
        <item name="android:textSize">@dimen/font_smallest</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="line_vertical">
        <item name="android:background">@drawable/line_vertical</item>
        <item name="android:layout_width">0.30000007dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="order_and_trade_status_icon">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="arrow_right_gray" parent="@style/arrow_right">
        <item name="android:src">@mipmap/arrow_right_gray</item>
    </style>

    <style name="normal_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

</resources>
